<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<title>Furniture Shop</title>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
<link rel="stylesheet" type="text/css" href="style.css" />
</head>

<body>
  <div id="header">
    <div id="header_inside">
      <img src="/assets/zone/header.jpg" alt="setalpm" width="999" height="222" border="0" usemap="#Map" /><br />
      <ul id="menu">
        <li><a href="/" class="but1">Главная</a></li>
        <li><a data-toggle="modal" href="#myModal" class="but2">Контакты</a></li>
        <li><a href="<%= new_admin_user_session_path %>" class="but3">Войти</a></li>
      </ul>
    </div>
  </div>
  <div id="wrapper">
    <div id="content_inside">
      <div id="sidebar">
        <h4>Продукция:</h4>
        <ul id="list">
          <% @categories_for_menu.each do |category| %>
            <li><a href="<%= category_items_path(category) %>"><%= category.title %></a></li>
          <% end %>
        </ul>
      </div>
      <div id="main_block">
        <p class="notice"><%= notice %></p>
         <div class="content_zone">
           <%= yield %>
         </div>
      </div>
    </div>
  </div>
  <div id="footer">
    <div id="footer_inside">
      <ul class="footer_menu">
        <li><a href="/">Главная</a>|</li>
        <li><a data-toggle="modal" href="#myModal">Контакты</a>|</li>
        <li><a href="<%= new_admin_user_session_path %>">Войти</a></li>
      </ul><br /><br />
      <p>Copyright &copy;. All rights reserved.</p>
    </div>
  </div>
    <map name="Map">
      <area shape="rect" coords="78,45,312,119" href="/">
      <area shape="poly" coords="670,87,719,78,727,123,677,130" href="/">
      <area shape="poly" coords="776,124,818,152,793,189,751,160" href="<%= new_admin_user_session_path %>">
      <area shape="poly" coords="834,52,885,61,878,105,828,96" data-toggle="modal" href="#myModal">
  </map>

  <div class="modal fade" id="myModal">
    <div class="modal-header">
      <button class="close" data-dismiss="modal">×</button>
      <h3>Контакты</h3>
    </div>
    <div class="modal-body">
      <p><%== TunedSanitize::for_(@contact.content) if @contact %></p>
    </div>
  </div>
</body>
</html>
